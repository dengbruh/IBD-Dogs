#################### 480 trunc length ########################

# Train classifier for V1-V4 (27F and 806R)
qiime feature-classifier extract-reads \
  --i-sequences /mnt/datasets/silva_ref_files/silva-138-99-seqs.qza \
  --p-f-primer AGAGTTTGATYMTGGCTCAG \
  --p-r-primer GGACTACNVGGGTWTCTAAT \
  --p-trunc-len 480 \
  --o-reads 480-silva-138-99-27-806-nb-classifier.qza

# Train classifier with trimmed reference sequences and reference taxonomy
qiime feature-classifier fit-classifier-naive-bayes \
  --i-reference-reads 480-silva-138-99-27-806-nb-classifier.qza \
  --i-reference-taxonomy /mnt/datasets/silva_ref_files/silva-138-99-tax.qza \
  --o-classifier 480-classifier.qza

# Assign Taxonomy
qiime feature-classifier classify-sklearn \
--i-classifier 480-classifier.qza \
--i-reads 480-rep-seqs.qza \
--o-classification 480-taxonomy.qza

# Visualize taxonomy table
qiime metadata tabulate \
--m-input-file 480-taxonomy.qza \
--o-visualization 480-taxonomy.qzv

# Visualize taxonomy barplots
qiime taxa barplot \
--i-table 480-table.qza \
--i-taxonomy 480-taxonomy.qza \
--m-metadata-file IBD_metadata.tsv \
--o-visualization 480-taxa-bar-plots.qzv


#################### 100 trunc length ########################

